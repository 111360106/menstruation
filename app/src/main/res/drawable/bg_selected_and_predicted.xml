<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 粉色圓形虛線背景 -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#FFB6C1"
                android:dashWidth="4dp"
                android:dashGap="2dp" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <!-- 黑框 -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#000000" />
            <size
                android:width="54dp"
                android:height="54dp" />
        </shape>
    </item>
</layer-list>
